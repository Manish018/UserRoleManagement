@using Microsoft.AspNetCore.Identity;
@using UserRoleManagement.Data
@inject SignInManager<Users> signInManager;
<ul class="navbar-nav ms-auto align-items-center">
	@if (signInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
				@Html.AntiForgeryToken()
				<button type="submit" class="btn btn-link nav-link text-dark p-0">Logout</button> 
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a asp-controller="Account" asp-action="Login" class="nav-link text-dark">
				Login
			</a>
		</li>
		<li class="nav-item">
			<a asp-controller="Account" asp-action="Register" class="nav-link text-dark">
				Register
			</a>
		</li>
	}
</ul>
